@model QuizApp.Enities.Question

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>
<hr />
<h3>Are you sure you want to delete this Question?</h3>
<hr />

<div class="row container justify-content-center">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.QuestionText)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.QuestionText)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Answer1)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Answer1)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Answer2)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Answer2)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Answer3)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Answer3)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Answer4)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Answer4)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CorrectAnswer)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CorrectAnswer)
            </dd>
        </dl>
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
    <div class="col-md-6">
        <img width="200" height="200" style="max-width: 100%; max-height: 200px;" src="@Url.Action("GetImage", "Questions", new { ID = Model.Id })" alt="Question Image" />
    </div>
</div>
