@model IEnumerable<QuizApp.Enities.Question>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create">Create New Question</a>
</p>
<table class="table">
   <tbody>
@foreach (var item in Model) {
    <div class="row align-items-center">
        <tr>
          <div class="col-md-8">
               <td>
                     @Html.DisplayFor(modelItem => item.QuestionText)
               </td>
               <td>
                     @Html.DisplayFor(modelItem => item.Answer1)
               </td>
               <td>
                      @Html.DisplayFor(modelItem => item.Answer2)
               </td>
               <td>
                      @Html.DisplayFor(modelItem => item.Answer3)
               </td>
               <td>
                      @Html.DisplayFor(modelItem => item.Answer4)
               </td>
            </div>
          <div class="col-md-4">
            <td>

                    <img width="100" height="100" max-width: 100%;
                         max-height: 200px;
                         display: block;
                         margin: 0 auto; src="@Url.Action("GetImage", "Questions", new { ID = item.Id })" alt="Question Image" />
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | *@
                <form asp-action="Details" asp-route-id="@item.Id" method="get">
                    <button type="submit" class="btn btn-primary">Answer Question</button>
                </form>
                </td>
               
                @if(ViewBag.IsAdmin == true)
                  {
                    <td>
                   <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                    </td>
                    <td>
                   
                   <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" >Delete</a> 
                    </td>
                  }
               
                @* <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
            
          </div>
        </tr>
   </div>
}
    </tbody>
</table>



