@model QuizApp.Models.QuestionModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create Question </h1>

<hr />
@using (Html.BeginForm("Edit", "Questions", null, FormMethod.Post, true, new { @class = "form-validate", @role = "form", @enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="QuestionText" class="control-label"></label>
                    @Html.TextBoxFor(e => e.QuestionText, new { @class = "form-control", @required = true, @placeholder = "Question" })
                    <span asp-validation-for="QuestionText" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="Answer1" class="control-label"></label>
                    @Html.TextBoxFor(e => e.Answer1, new { @class = "form-control", @required = true })
                    <span asp-validation-for="Answer1" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="Answer2" class="control-label"></label>
                    @Html.TextBoxFor(e => e.Answer2, new { @class = "form-control", @required = true })
                    <span asp-validation-for="Answer2" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="Answer3" class="control-label"></label>
                    @Html.TextBoxFor(e => e.Answer3, new { @class = "form-control", @required = true })
                    <span asp-validation-for="Answer3" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="Answer4" class="control-label"></label>
                    @Html.TextBoxFor(e => e.Answer4, new { @class = "form-control", @required = true })
                    <span asp-validation-for="Answer4" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <label asp-for="CorrectAnswer" class="control-label"></label>
                    @Html.TextBoxFor(e => e.CorrectAnswer, new { @class = "form-control", @required = true })
                    <span asp-validation-for="CorrectAnswer" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <img width="200" height="200" style="max-width: 100%; max-height: 200px;" src="@Url.Action("GetImage", "Questions", new { ID = Model.Id })" alt="Question Image" />
        </div>
    </div>
}

<hr />
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function displaySelectedImage(event) {
            var image = document.getElementById('selectedImage');
            image.style.display = 'block';
            image.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}



